<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" monitorInterval="5">
    <Properties>
        <Property name="log-path">/var/log/wavefront</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>%d{h:mm:ss} %-5level [%c{1}:%M] %m%n</pattern>
            </PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Logger for storing Dropped points -->
        <AsyncLogger name="RawDroppedPoints" level="ERROR" additivity="false">
            <AppenderRef ref="Console" />
        </AsyncLogger>

        <AsyncLogger name="org.apache.activemq.audit.base" level="ERROR" additivity="false">
            <AppenderRef ref="Console" />
        </AsyncLogger>
        <AsyncLogger name="org.apache.activemq.audit.resource" level="ERROR" additivity="false">
            <AppenderRef ref="Console" />
        </AsyncLogger>
        <AsyncLogger name="org.apache.activemq.audit.message" level="ERROR" additivity="false">
            <AppenderRef ref="Console" />
        </AsyncLogger>

        <Root level="INFO">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>