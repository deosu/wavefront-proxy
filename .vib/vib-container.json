{
  "context": {
    "resources": {
      "url": "{SHA_ARCHIVE}",
      "path": "docker"
    }
  },
  "phases": {
    "verify": {
      "actions": [
        {
          "action_id": "container-image-lint",
          "params": {
            "threshold": "error"
          }
        },
        {
          "action_id": "trivy",
          "params": {
            "threshold": "CRITICAL",
            "vuln_type": [
              "OS"
            ],
            "application": {
              "kind": "CONTAINER_IMAGE",
              "details": {
                "repository": "runner",
                "name": "proxy-dev",
                "tag": "gh-build"
              }
            }
          }
        }
      ]
    }
  }
}
