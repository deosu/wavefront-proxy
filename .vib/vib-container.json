{
  "phases": {
    "verify": {
      "context": {
        "application": {
          "kind": "CONTAINER_IMAGE",
          "details": {
            "repository": {
              "url": "docker.io/{DOCKER_USER}"
            },
            "name": "proxy-dev",
            "tag": "gh-build"
          }
        }
      }, 
      "actions": [
        {
          "action_id": "container-image-lint",
          "params": {
            "threshold": "error"
          }
        },
        {
          "action_id": "trivy",
          "params": {
            "threshold": "CRITICAL",
            "vuln_type": [
              "OS"
            ]
          }
        }
      ]
    }
  }
}
