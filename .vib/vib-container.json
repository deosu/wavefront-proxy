{
  "phases": {
    "verify": {
      "context": {
        "application": {
          "kind": "CONTAINER_IMAGE",
          "details": {
            "repository": {
              "url": "oci://docker.io/{VIB_ENV_DOCKER_USER}"
            },
            "name": "proxy-dev",
            "tag": "${{ env.BRANCH_NAME }}"
          }
        }
      }, 
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "CRITICAL",
            "vuln_type": [
              "OS"
            ]
          }
        }
      ]
    }
  }
}
